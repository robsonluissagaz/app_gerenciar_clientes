MeuGerenciador:
    TelaInicio:
    CadastroCliente:
    GerarServico:


<TelaInicio>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    name: 'tela_inicio'
    FloatLayout:
        Button:
            text: 'CADASTRAR CLIENTE'
            size_hint: 0.8, 0.08
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.70}
            on_release: root.manager.current = 'cadastro_cliente'
        Button:
            text: 'GERAR SERVIÇO'
            size_hint: 0.8, 0.08
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.60}
            on_release: root.manager.current = 'gerar_servico'
        Button:
            text: 'SERVIÇOS NÃO FINALIZADOS'
            size_hint: 0.8, 0.08
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.50}
        Button:
            text: 'SERVIÇOS FINALIZADOS'
            size_hint: 0.8, 0.08
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.40}
        Button:
            text: 'SAIR'
            size_hint: 0.3, 0.08
            font_size: '18sp'
            background_color: 1, 0, 0, 1
            pos_hint: {'center_x': 0.5, 'y': 0.15}
            on_release: app.fechar_aplicativo()


<CadastroCliente>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    name: 'cadastro_cliente'
    FloatLayout:
        Label:
            id: letreiro_cadastro_cliente
            text: 'CADASTRO DE CLIENTE'
            size_hint: None, None
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.5, 'y': 0.80}
        TextInput:
            id: nome_cliente
            hint_text: 'NOME DO CLIENTE'
            multiline: False
            size_hint: 0.7, 0.06
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.7}
        TextInput:
            id: numero_contato
            hint_text: 'NÚMERO PARA CONTATO'
            multiline: False
            size_hint: 0.7, 0.06
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.6}
            input_filter: 'int'
            input_type: 'number'
            on_text: if not self.text.isdigit(): self.text = ''.join(filter(str.isdigit, self.text))
        Button:
            text: 'CADASTRAR CLIENTE'
            size_hint: 0.8, 0.08
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.5}
        Button:
            text: 'VOLTAR'
            background_color: 1, 0, 0, 1
            size_hint: 0.3, 0.08
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.4}
            on_release: root.manager.current = 'tela_inicio'


<GerarServico>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    name: 'gerar_servico'
    FloatLayout:
        Label:
            id: letreiro_gerar_servico
            text: 'CADASTRO DE SERVIÇO'
            size_hint: None, None
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.5, 'y': 0.95}
        Spinner:
            id: tipo
            text: "SELECIONE O TIPO"
            values: ["MENSAL", "DIÁRIA"]
            size_hint: 0.5, None
            height: 100
            pos_hint: {'center_x': 0.5, 'y': 0.88}
        TextInput:
            id: descricao
            hint_text: 'DESCRIÇÃO'
            size_hint: 0.6, 0.10
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.75}
        TextInput:
            id: data_servico
            hint_text: 'DATA (DD/MM/AAAA)'
            multiline: False
            readonly: True
            size_hint: 0.6, 0.06
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.65}
            on_touch_down:if self.collide_point(*args[1].pos): root.abrir_calendario()
        TextInput:
            id: nome_cliente
            hint_text: 'NOME DO CLIENTE'
            multiline: False
            size_hint: 0.6, 0.06
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.55}
        TextInput:
            id: numero_contato
            hint_text: 'NÚMERO PARA CONTATO'
            multiline: False
            size_hint: 0.6, 0.06
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.45}
            input_filter: 'int'
            input_type: 'number'
            on_text: if not self.text.isdigit(): self.text = ''.join(filter(str.isdigit, self.text))
        TextInput:
            id: endereco
            hint_text: 'ENDEREÇO'
            multiline: True
            size_hint: 0.6, 0.06
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.35}
        TextInput:
            id: valor
            hint_text: 'VALOR COBRADO'
            multiline: False
            size_hint: 0.6, 0.06
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.25}
        Button:
            text: 'CONFIRMAR'
            background_color: 3, 0, 0, 3
            size_hint: 0.3, 0.08
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.15}
            on_release: root.manager.current = 'tela_inicio'
        Button:
            text: 'VOLTAR'
            background_color: 1, 0, 0, 1
            size_hint: 0.3, 0.08
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'y': 0.03}
            on_release: root.manager.current = 'tela_inicio'
        
        